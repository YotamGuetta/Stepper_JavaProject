                <Tab text="Roles Management">
                   <content>
                       <fx:include fx:id="rolesComponent" source="../../ItemsContainer/ItemsSceneLayout.fxml" />
                   </content>
                </Tab>
                  <Tab text="Executions History">
                     <content>
                     <fx:include fx:id="flowHistoryComponent" source="../../FlowHistory/FlowHistorySceneLayout.fxml" />
                     </content>
                  </Tab>
                  <Tab text="Statistics">
                     <content>
                         <fx:include fx:id="flowStatisticsComponent" source="../FlowStatistics/FlowStatisticsSceneLayout.fxml" />
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </AnchorPane>
