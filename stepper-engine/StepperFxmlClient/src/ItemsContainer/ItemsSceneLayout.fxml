<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ItemsContainer.ItemsController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" HBox.hgrow="ALWAYS">
         <content>
            <VBox fx:id="ItemsContainer" styleClass="background-part" />
         </content>
      </ScrollPane>
      <ScrollPane fitToHeight="true" fitToWidth="true" HBox.hgrow="ALWAYS">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" styleClass="background-part">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="background-part" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <content>
                        <GridPane id="bottom-half" fx:id="ItemFullDetails" hgap="5.0" minWidth="350.0" styleClass="background-part" vgap="8.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                        </GridPane>
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </AnchorPane>
         </content>
      </ScrollPane>
   </children>
</HBox>
